<Window x:Class="PR.WizPlant.ScadaDataGeneral.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" Orientation="Horizontal">
            <Button Name="btnStart" Click="Button_Click_1" IsEnabled="False" Grid.Row="0" Content="开始" Width="50" ></Button>
            <Button Name="btnStop" Click="btnStop_Click_1"  IsEnabled="False" Grid.Row="0" Content="停止" Width="50" Margin="10,0"></Button>
        </StackPanel>
        <RichTextBox Grid.Row="1" Name="infoBox" VerticalScrollBarVisibility="Visible"  TextChanged="infoBox_TextChanged_1"></RichTextBox>
    </Grid>
</Window>
